<?xml version="1.0" encoding="UTF-8"?>
<additional>
  <!-- FULL DIESEL heavy-duty trucks -->
  <vType id="truck_euro6"
         vClass="truck"
         accel="1.0"
         decel="3.0"
         sigma="0.5"
         length="12.0"
         minGap="3.0"
         maxSpeed="22.22"
         emissionClass="HBEFA3/HDV"
         guiShape="truck"/>

  <!-- Battery-electric heavy-duty trucks (zero tailpipe; tracks energy) -->
  <vType id="truck_ev"
         vClass="truck"
         accel="1.0"
         decel="3.0"
         sigma="0.5"
         length="12.0"
         minGap="3.0"
         maxSpeed="22.22"
         emissionClass="Energy/unknown"
         guiShape="truck"
         mass="16000">
    <!-- Battery & EV powertrain params (reasonable starting point) -->
    <param key="has.battery.device" value="true"/>
    <param key="device.battery.capacity" value="500000"/>          <!-- Wh (â‰ˆ500 kWh) -->
    <param key="maximumPower" value="350000"/>                      <!-- W  -->
    <param key="frontSurfaceArea" value="8.0"/>                     <!-- m^2 -->
    <param key="airDragCoefficient" value="0.6"/>
    <param key="rollDragCoefficient" value="0.008"/>
    <param key="rotatingMass" value="80"/>                          <!-- kg -->
    <param key="constantPowerIntake" value="800"/>                  <!-- W auxiliaries -->
    <param key="propulsionEfficiency" value="0.94"/>
    <param key="recuperationEfficiency" value="0.7"/>
    <!-- Optional: start SoC (default ~50% of capacity) -->
    <!-- <param key="device.battery.chargeLevel" value="400000"/> -->
  </vType>

  <!-- Passenger cars -->
  <vType id="car_default"
         vClass="passenger"
         accel="2.6"
         decel="4.5"
         sigma="0.5"
         length="4.5"
         minGap="2.5"
         maxSpeed="13.89"
         emissionClass="HBEFA3/PC_G_EU4"
         guiShape="passenger"/>
</additional>
